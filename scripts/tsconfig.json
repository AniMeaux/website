{
  "extends": "../tsconfig.base.json",
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules"],

  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": { "#*": ["./src/*"] }
  },

  "ts-node": {
    "esm": true,
    "files": true,

    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true
  }
}
