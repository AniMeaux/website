{
  "name": "@animeaux/api",
  "version": "1.0.0",
  "private": true,
  "main": "./build/app.js",
  "prisma": {
    "seed": "ts-node --files ./scripts/seedData.ts"
  },
  "scripts": {
    "build:prisma": "prisma generate",
    "build": "babel src -d ./build --extensions \".ts\" --copy-files",
    "clean-build": "run-s clean build",
    "clean": "rm -rf ./build",
    "db:migrate": "yarn prisma-env migrate dev",
    "db:reset": "yarn prisma-env migrate reset -f",
    "db:setup": "run-s db:reset",
    "dev:prisma": "prisma generate",
    "dev": "node -r dotenv-flow/config -r ./build/mocks .",
    "generate": "run-s build:prisma",
    "prisma-env": "node -r dotenv-flow/config ./node_modules/.bin/prisma",
    "script": "NODE_OPTIONS=\"-r dotenv-flow/config\" ts-node --files",
    "start": "node ."
  },
  "dependencies": {
    "@algolia/client-search": "^4.12.0",
    "@animeaux/shared": "*",
    "@koa/cors": "^3.1.0",
    "@prisma/client": "^4.8.0",
    "algoliasearch": "^4.12.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.33.0",
    "cookie-signature": "^1.2.0",
    "d3-dsv": "^2.0.0",
    "dotenv-flow": "^3.2.0",
    "firebase-admin": "^10.0.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^10.1.1",
    "lodash.orderby": "^4.6.0",
    "luxon": "^2.3.0",
    "tiny-invariant": "^1.2.0",
    "type-fest": "^3.6.0",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-proposal-numeric-separator": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@faker-js/faker": "^6.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-signature": "^1.0.4",
    "@types/d3-dsv": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.1.1",
    "@types/lodash.orderby": "^4.6.6",
    "@types/luxon": "^2.0.9",
    "@types/node": "^17.0.6",
    "@types/pg": "^8.6.5",
    "@types/pg-copy-streams": "^1.2.1",
    "@types/uuid": "^9.0.0",
    "fs-extra": "^10.0.0",
    "msw": "^0.49.2",
    "npm-run-all": "^4.1.5",
    "pg": "^8.8.0",
    "pg-copy-streams": "^6.0.2",
    "prisma": "^4.8.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.4"
  }
}
