{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "module": "CommonJS",
    "noEmit": true
  }
}
