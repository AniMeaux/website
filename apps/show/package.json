{
  "name": "@animeaux/show",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "node -r dotenv-flow/config ./node_modules/.bin/remix dev",
    "build": "run-s \"build:css --minify\" \"build:icons --minify\" build:theme build:remix",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./src/generated/tailwind.css",
    "build:icons": "ts-node --files ./scripts/generateIconSprite.ts",
    "build:theme": "ts-node --files ./scripts/generateTheme.ts",
    "build:remix": "remix build",
    "start": "remix-serve ./build",
    "clean": "rm -rf ./build ./public/build ./src/generated",
    "clean-build": "run-s clean build"
  },
  "dependencies": {
    "@animeaux/shared": "*",
    "@remix-run/node": "^1.6.4",
    "@remix-run/react": "^1.6.4",
    "@remix-run/serve": "^1.6.4",
    "body-scroll-lock": "^3.1.5",
    "focus-trap": "^6.7.1",
    "focus-visible": "^5.2.0",
    "history": "^5.3.0",
    "lodash.orderby": "^4.6.0",
    "luxon": "^2.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-transition-group": "^4.4.2",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.4",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/lodash.orderby": "^4.6.6",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-transition-group": "^4.4.5",
    "dotenv-flow": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
