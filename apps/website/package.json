{
  "name": "@animeaux/website",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "msw": {
    "workerDirectory": "./public"
  },
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "generate": "run-p --continue-on-error --print-label generate:*",
    "generate:icons": "tsx ./scripts/generate-icon-sprite.ts",
    "generate:theme": "tsx ./scripts/generate-theme.ts",
    "predev": "yarn generate",
    "dev": "run-p --continue-on-error --print-label dev:*",
    "dev:icons": "yarn generate:icons --watch",
    "dev:remix": "node -r dotenv-flow/config ./node_modules/.bin/remix vite:dev --host",
    "dev:theme": "tsx watch --clear-screen=false ./scripts/generate-theme.ts",
    "build": "run-s build:icons build:theme build:remix",
    "build:icons": "yarn generate:icons --minify",
    "build:remix": "remix vite:build",
    "build:theme": "yarn generate:theme",
    "start": "remix-serve ./build/server/index.js"
  },
  "dependencies": {
    "@animeaux/core": "*",
    "@prisma/client": "^5.8.1",
    "@remix-run/node": "~2.9.2",
    "@remix-run/react": "~2.9.2",
    "@remix-run/serve": "~2.9.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "body-scroll-lock": "^3.1.5",
    "focus-trap": "^7.5.2",
    "history": "^5.3.0",
    "isbot": "^5.1.8",
    "lodash.orderby": "^4.6.0",
    "luxon": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-transition-group": "^4.4.5",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remix-utils": "^7.5.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@remix-run/dev": "~2.9.2",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/lodash.orderby": "^4.6.7",
    "@types/luxon": "^3.3.1",
    "@types/node": "^18.17.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-transition-group": "^4.4.6",
    "autoprefixer": "^10.4.15",
    "chokidar": "^3.5.3",
    "dotenv-flow": "^4.1.0",
    "msw": "^2.3.1",
    "node-html-parser": "^6.1.12",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "~5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
