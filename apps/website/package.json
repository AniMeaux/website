{
  "name": "@animeaux/website",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "msw": {
    "workerDirectory": "./public"
  },
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "build:icons": "ts-node --files ./scripts/generateIconSprite.ts",
    "build:remix": "remix build",
    "build:theme": "ts-node --files ./scripts/generateTheme.ts",
    "build": "run-s \"build:icons --minify\" build:theme build:remix",
    "clean-build": "run-s clean build",
    "clean": "rm -rf ./build ./public/build ./src/generated",
    "dev": "PORT=3000 node -r dotenv-flow/config ./node_modules/.bin/remix dev --port 3010",
    "generate": "run-s \"build:icons --minify\" build:theme",
    "start": "remix-serve ./build"
  },
  "dependencies": {
    "@animeaux/core": "*",
    "@prisma/client": "^5.2.0",
    "@remix-run/node": "~1.19.3",
    "@remix-run/react": "~1.19.3",
    "@remix-run/serve": "~1.19.3",
    "@total-typescript/ts-reset": "^0.5.1",
    "body-scroll-lock": "^3.1.5",
    "focus-trap": "^7.5.2",
    "focus-visible": "^5.2.0",
    "history": "^5.3.0",
    "lodash.orderby": "^4.6.0",
    "luxon": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-transition-group": "^4.4.5",
    "remark-breaks": "^3.0.3",
    "remark-gfm": "^3.0.1",
    "remix-utils": "^6.6.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@remix-run/dev": "~1.19.3",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/lodash.orderby": "^4.6.7",
    "@types/luxon": "^3.3.1",
    "@types/node": "^17.0.6",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-transition-group": "^4.4.6",
    "autoprefixer": "^10.4.15",
    "dotenv-flow": "^3.3.0",
    "msw": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  }
}
