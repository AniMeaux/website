{
  "name": "@animeaux/website",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "msw": {
    "workerDirectory": "./public"
  },
  "scripts": {
    "build:icons": "ts-node --files ./scripts/generateIconSprite.ts",
    "build:remix": "remix build",
    "build:theme": "ts-node --files ./scripts/generateTheme.ts",
    "build": "run-s \"build:icons --minify\" build:theme build:remix",
    "clean-build": "run-s clean build",
    "clean": "rm -rf ./build ./public/build ./src/generated",
    "dev": "PORT=3000 node -r dotenv-flow/config ./node_modules/.bin/remix dev --port 3010",
    "generate": "run-s \"build:icons --minify\" build:theme",
    "start": "remix-serve ./build"
  },
  "dependencies": {
    "@animeaux/shared": "*",
    "@prisma/client": "^4.8.0",
    "@remix-run/node": "~1.18.0",
    "@remix-run/react": "~1.18.0",
    "@remix-run/serve": "~1.18.0",
    "@total-typescript/ts-reset": "^0.4.2",
    "body-scroll-lock": "^3.1.5",
    "focus-trap": "^6.7.1",
    "focus-visible": "^5.2.0",
    "history": "^5.3.0",
    "lodash.orderby": "^4.6.0",
    "luxon": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^7.1.2",
    "react-transition-group": "^4.4.2",
    "remark-breaks": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remix-utils": "^6.0.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "~1.18.0",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/lodash.orderby": "^4.6.6",
    "@types/node": "^17.0.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-transition-group": "^4.4.5",
    "dotenv-flow": "^3.2.0",
    "msw": "^0.49.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  }
}
