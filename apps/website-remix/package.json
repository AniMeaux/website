{
  "name": "@animeaux/website-remix",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "remix dev",
    "build": "run-s \"build:css --minify\" build:remix",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./src/generated/tailwind.css",
    "build:remix": "remix build",
    "start": "remix-serve ./build",
    "clean": "rm -rf ./build ./public/build ./src/generated",
    "clean-build": "run-s clean build"
  },
  "dependencies": {
    "@animeaux/shared": "*",
    "@prisma/client": "^3.11.1",
    "@remix-run/node": "^1.6.4",
    "@remix-run/react": "^1.6.4",
    "@remix-run/serve": "^1.6.4",
    "focus-visible": "^5.2.0",
    "history": "^5.3.0",
    "luxon": "^2.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^7.1.2",
    "remark-breaks": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "remark-slug": "^7.0.1",
    "tiny-invariant": "^1.2.0",
    "wicg-inert": "^3.1.1",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.4",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.5.4"
  }
}
