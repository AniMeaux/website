{
  "name": "@animeaux/files-io",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./build/src/index.d.ts",
      "default": "./build/src/index.js"
    }
  },
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "run-s --print-label build:src",
    "build:src": "tsc -p ./tsconfig.build.json",
    "clean": "rm -rf ./build",
    "dev": "run-p --continue-on-error --print-label dev:*",
    "dev:src": "pnpm build:src --watch",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "tiny-invariant": "catalog:"
  },
  "devDependencies": {
    "npm-run-all": "catalog:",
    "typescript": "catalog:"
  }
}
