{
  "private": true,
  "workspaces": [
    "api",
    "shared",
    "apps/*"
  ],
  "license": "MIT",
  "engines": {
    "node": "^16.13.0",
    "yarn": "^1.22.0"
  },
  "scripts": {
    "up": "run-s up:docker up:ecosystem",
    "up:ecosystem": "pm2 start ./ecosystem.config.js",
    "up:docker": "docker-compose up -d",
    "down": "run-s down:ecosystem down:docker",
    "down:ecosystem": "pm2 delete ./ecosystem.config.js && rm -rf ./logs",
    "down:docker": "docker-compose down",
    "restart:ecosystem": "run-s down:ecosystem up:ecosystem",
    "log": "yarn pm2 log",
    "format": "prettier --write .",
    "lint": "run-p --aggregate-output --continue-on-error lint:*",
    "lint:format": "prettier --list-different .",
    "lint:js": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:ts": "tsc --noEmit -p ./shared && tsc --noEmit -p ./apps/faune && tsc --noEmit -p ./apps/faune-remix && tsc --noEmit -p ./apps/website && tsc --noEmit -p ./apps/show"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.6.4",
    "@types/prettier": "^2.6.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.2.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.4"
  }
}
