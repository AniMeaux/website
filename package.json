{
  "name": "@animeaux/root",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^22.11.0",
    "pnpm": "^10.20.0"
  },
  "packageManager": "pnpm@10.20.0",
  "type": "module",
  "scripts": {
    "dev-down": "run-s dev-down:ecosystem dev-down:docker",
    "dev-down:docker": "docker compose down",
    "dev-down:ecosystem": "pm2 delete ./ecosystem.config.cjs && rm -rf ./logs",
    "dev-ls": "pnpm pm2 ls",
    "dev-log": "pnpm pm2 log",
    "dev-restart:ecosystem": "run-s dev-down:ecosystem dev-up:ecosystem",
    "dev-up": "run-s dev-up:docker dev-up:ecosystem",
    "dev-up:docker": "docker compose up -d",
    "dev-up:ecosystem": "pm2 start ./ecosystem.config.cjs",
    "generate": "run-p --continue-on-error --print-label generate:*",
    "generate:workspace": "pnpm -r generate",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:format": "prettier --list-different .",
    "lint:js": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:workspace": "pnpm -r lint",
    "lint-fix": "run-s lint-fix:js lint-fix:format",
    "lint-fix:format": "prettier --write .",
    "lint-fix:js": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix ."
  },
  "devDependencies": {
    "@remix-run/eslint-config": "~2.9.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.3.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.1"
  }
}
